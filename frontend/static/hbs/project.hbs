<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.googleapis.com" />
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
      <link href="https://fonts.googleapis.com/css2?family=Suez+One&display=swap" rel="stylesheet" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />
      <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800&display=swap"
         rel="stylesheet" />
      <title>Dreamwork</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
         integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
      <link href="static/css/style.css" rel="stylesheet" />
   </head>
   <header>
      <div class="flex-logo header-part">
         <a href="/" class="dreamwork-logo" data-link>Dreamwork</a>
      </div>
      <div class="flex-menu header-part"></div>
      <div class="flex-user header-part">
         <a class="user-container" href="/profile">
            <div class="user-name">{{user.name}} {{user.surname}}</div>
            <div class="user-role">{{user.role}}</div>
         </a>
      </div>
   </header>
   <body>
      <div class="body-flex">
         <div class="sidebar">
            <div class="sidebar-nav nav-top">
               <a class="nav-item projects" href="/project">
                  <div class="active-indicator"></div>
                  <img class="icon" src="/static/media/project.svg" />
                  <div class="text">Projects</div>
                  <div class="current-project-text">
                     <p>Current project:</p>
                     <p>Sukurti dreamworką</p>
                  </div>
               </a>
               <a class="nav-item tasks" href="/task">
                  <img class="icon" src="/static/media/tasks.svg" />
                  <div class="text">Tasks</div>
               </a>
               <a class="nav-item profile" href="/profile">
                  <img class="icon" src="/static/media/profile.svg" />
                  <div class="text">Profile</div>
               </a>
            </div>
            <div class="sidebar-nav nav-bottom">
               <a
                  class="nav-item logout"
                  href="/logout"
                  action="/logout"
                  method="GET"
                  >
                  <img class="icon" src="/static/media/logout.svg" />
                  <div class="text">Logout</div>
               </a>
            </div>
         </div>
         <div class="view-content">
            <div class="container mt-1 project-container">
               <div class="col projects-col">
                  <div class = "h2-header">
                     <h2 class="projects-header">Projects</h2>
                     <button class="h2-button create-new-project-btn">
                        <img class = "h2-header-icon" src="/static/media/plus.svg" />
                     </button>
                  </div>
                  <ul class="list-group project-list">
                     {{#each projects}}
                        <div class="project-list-item">
                           <a href="#" class="list-group-items list-group-item-action" data-project-id="{{this.project_id}}" active={{#if this.active}}"true"{{else}}"false"{{/if}}>
                              {{this.name}}
                           </a>
                           <button class="project-list-item-delete" data-project-id="{{this.project_id}}">
                              <img src="/static/media/exit.svg" />
                           </button>
                        </div>
                     {{/each}}
                  </ul>
                  
               </div>
               <div class = "col project-info-col">
                  <div class = "h2-header">
                     <h2 class="projects-header">Details</h2>
                  </div>
                  <div class = "project-detail-table">
                     <div class="project-detail-bigger-container">
                        <div class = "project-detail-header">
                           <h4>Name</h4>  
                           <button class="h4-button">
                           <img class = "h4-header-icon" src="/static/media/pen.svg" />
                           </button>
                        </div>
                        <div class = "project-name">{{activeProject.name}}</div>
                     </div>
                     <div class="project-detail-bigger-container">
                        <div class = "project-detail-header">
                           <h4>Description</h4>  
                           <button class="h4-button">
                           <img class = "h4-header-icon" src="/static/media/pen.svg" />
                           </button>
                        </div>
                        <div class = "project-description">{{activeProject.description}}</div>
                     </div>
                     <div class="project-detail-smaller-container">
                        <div class = "project-detail-header">
                           <h4>Deadline</h4>  
                           <button class="h4-button">
                           <img class = "h4-header-icon" src="/static/media/pen.svg" />
                           </button>
                        </div>
                        <div class = "project-deadline">{{activeProject.deadline}}</div>
                     </div>
                     <div class="project-detail-smaller-container">
                        <div class = "project-detail-header">
                           <h4>Project manager</h4>  
                           <button class="h4-button">
                           <img class = "h4-header-icon" src="/static/media/pen.svg" />
                           </button>
                        </div>
                        <div class = "project-manager">Green Velvet</div>
                     </div>
                  </div>
               </div>
               <div class="col users-list-col">
                  <div class = "h2-header">
                     <h2 class="projects-header">Attendants</h2>
                     <button class="h2-button create-new-project-btn">
                     <img class = "h2-header-icon" src="/static/media/plus.svg" />
                     </button>
                  </div>
                  <ul class="list-group attendant-list">
                     <li class="attendant-list-group-items">Ignas Dudėnas <button class="attendant-list-item-delete">X</button></li>
                     <li class="attendant-list-group-items">Andrius Bogda <button class="attendant-list-item-delete">X</button></li>
                  </ul>
               </div>
            </div>
         </div>
      </div>
         <div class="modal-window" id = "project-modal-window">
            <div class="create-new-project-window">
               <button class="close-modal"><img src="static/media/exit.svg" /></button>
               <h1>New Project</h1>
               <form class = "create-project-form" method="POST" action="project/create-project">
                  <div class="form-group">
                     <label for="createProjectName">Project name:</label>
                     <input
                        type="text"
                        id="createProjectName"
                        name="createProjectName"
                        class="form-control"
                        oninvalid="this.setCustomValidity('Please enter a project name')"
                        required
                        />
                  </div>
                  <div class="form-group">
                     <label for="createProjectDescription">Project description:</label>
                     <textarea
                        type="text"
                        id="createProjectDescription"
                        name="createProjectDescription"
                        class="form-control"
                        oninvalid="this.setCustomValidity('Please enter a description name')"
                        required
                        ></textarea>
                  </div>
                  <div class="form-group">
                     <label for="createProjecDeadline">Task Deadline</label>
                     <input
                        name="createProjecDeadline"
                        type="date"
                        class="form-control"
                        id="createProjectDeadline"
                        oninvalid="this.setCustomValidity('Please select a valid date')"
                        min=""
                        required
                        />
                  </div>
                  <button class="btn btn-primary" type="submit" id="submit-project">Create project</button>
               </form>
            </div>
         </div>
      </div>
      </div>
      </form>
      </div>
      </div>
      <script type="module" src="/static/js/project.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
         integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
         crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
         integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
         crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
         integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
         crossorigin="anonymous"></script>
   </body>
   </body>
</html>
